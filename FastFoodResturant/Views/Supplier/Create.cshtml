@model FastFoodResturant.Models.SupplierMaster

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/Create.css" />
<div class="card card-for-category">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="SupplierName" class="form-control" placeholder="Supplier Name" />
                        <span asp-validation-for="SupplierName" class="label-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="SupplierAddress" class="form-control" placeholder="Supplier Address" />
                        <span asp-validation-for="SupplierAddress" class="label-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="SupplierPhone" class="form-control" placeholder="Supplier Phone" />
                        <span asp-validation-for="SupplierPhone" class="label-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="SupplierEmail" class="form-control" placeholder="Supplier Email" />
                        <span asp-validation-for="SupplierEmail" class="label-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12" style="margin-left: 86px; margin-top: 10px;">
                    <div class="form-group" id="botam">
                        <input type="submit" value="Create" class="btn btn-create" />
                        <button type="button" class="btn btn-cancel" onclick="window.history.back()">Cancel</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="error-message">
                            <label class="label label-danger">@ViewBag.Message</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
