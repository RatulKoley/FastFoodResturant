@model FastFoodResturant.Models.TableMaster

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/Create.css" />
<div class="card card-for-category">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="TableName" class="form-control" placeholder="Table Name" />
                        <span asp-validation-for="TableName" class="label-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="Capacity" class="form-control" placeholder="Table Capacity" />
                        <span asp-validation-for="Capacity" class="label-danger"></span>
                    </div>
                </div>
            </div>
             <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <select asp-for="FloorType" class="form-control custom-select">
                            <option value="">Select FloorType</option>
                            <option value="Ground Floor">Ground Floor</option>
                            <option value="First Floor">First Floor</option>
                            <option value="Second Floor">Second Floor</option>
                        </select>
                        <span asp-validation-for="FloorType" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" asp-for="IsOutSide" /> Is Outside ?
                        </label>
                    </div>
                </div>
            </div> 
            <div class="row">
                <div class="col-md-12" style="margin-left: 86px; margin-top: 10px;">
                    <div class="form-group" id="botam">
                        <input type="submit" value="Create" class="btn btn-create" />
                        <button type="button" class="btn btn-cancel" onclick="window.history.back()">Cancel</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="error-message">
                            <label class="label label-danger">@ViewBag.Message</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}