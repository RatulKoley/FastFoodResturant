@model FastFoodResturant.Models.Category

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/Create.css" />
<div class="card card-for-category">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-group">
                        <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
                        <span asp-validation-for="CategoryName" class="label-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-group">
                        <input asp-for="CategoryDescription" class="form-control" placeholder="Category Description" />
                        <span asp-validation-for="CategoryDescription" class="label-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-group">
                        <h6 style="font-weight: 600; display: inline-block;">Picture</h6>
                        <label class="custom-file-upload">
                            <span>Choose File</span>
                            <input asp-for="CategoryImage" type="file" name="categoryImageData" class="form-control-file" data-title="Choose File" />
                        </label>
                    </div>
                </div>



            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    <div class="form-group" id="botam">
                        <input type="submit" value="Create" class="btn btn-create" />
                        <button type="button" class="btn btn-cancel" onclick="window.history.back()">Cancel</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 offset-md-1">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="error-message">
                            <label class="label label-danger">@ViewBag.Message</label>
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
